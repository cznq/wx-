  margin-top: 28rpx;
}
.loyerbg{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index: 999;
  display: none;
}
.loyerbg.action{
  display: block;
}
.loyer{
  width:90%;
  position: fixed;
  bottom:0px;
  left:5%;
  height:0px;
  overflow: hidden;
  z-index: 9999;
  transition: height .3s;
  overflow: hidden;
}
.loyer .cancelInfo{
  display: block;
  width:100%;
  line-height: 50px;
  background-color: #fd5394;
  border-radius: 5px;
  text-align: center;
}
.loyer .cancelbtn{
  display: block;
  width:100%;
  line-height: 50px;
  border:1px solid #f685a3;
  background-color: #fff;
  border-radius: 5px;
  color:#ff8db9;
  text-align: center;
  box-sizing: border-box;
}
.loyer.action{
  height: 168px;
  transition: height .3s;
}
.buttom{
  position: fixed;
  left:0;
  bottom:0;
  width: 750rpx;
  height:96rpx;
  background: #fff;
  padding:0 90rpx;
  box-sizing: border-box;
}
@media only screen and (device-width: 375px) and (device-height:812px) and (-webkit-device-pixel-ratio:3) {
