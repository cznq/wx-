/* 0.5px border */
.title_border05 {
    position: relative;
}
.title_border05:before {
    display: block;
    content: "";
    width: 199%;
    width: calc(200%);
    height: 2px;
    position: absolute;
    left: -50%;
    bottom: 0;
    background-color: #323232;
    transform: scale(0.5);
    z-index: 1;
}
