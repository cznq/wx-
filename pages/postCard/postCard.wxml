
<view class="main row cen-center">
  <view class="card">
    <!-- 背景图 -->
    <image class='card_bg' src='../../images/Group.png'></image>
    <!-- 收件人 -->
    <input class='content-input' maxlength='8' type="text"/>
    <!-- 信件内容 -->
    <textarea bindinput='noExpre' class='{{platform =="ios"?"textaios":"textarea"}}' value="{{areaVal}}" maxlength='39' />
    <!-- 寄件人 -->
    <input class='content-input position-j' maxlength='8' type="text"/>
    <!-- 地址 -->
    <text class='{{platform =="ios"?"addressIos":"address"}}'>北京市</text>
    <!-- 日期 -->
    <text class='{{platform =="ios"?"riqiIos":"riqi"}}'>{{setTime}}</text>
  </view>
</view>
<view class='s_content'>
  <view class='title padding10-0 gray-9 row cen-center'>请选择明信片反面样式</view>
  <swiper indicator-dots="{{indicatorDots}}"
   autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" display-multiple-items="2.5" previous-margin='10px'>
   <block wx:for="{{imgUrls}}" wx:for-item='item' wx:for-index='indx' wx:key='unique'>
     <swiper-item>
       <view class='item-v'>
         <image wx:if='{{currentIndex == indx}}' src='../../images/selected.png' class='selected' />
         <image src="{{item.url}}" bindtap='clickSwiper' data-index='{{indx}}' class="slide-image marg10-left {{currentIndex == indx ? 'slide-active':''}}" width="355" height="150"/>
       </view>

       <text class='name'>{{item.name}}</text>
     </swiper-item>
   </block>
  </swiper>
</view>
<view class='button_view row cen-center'>
<view class='button'>下一步</view>
</view>
